
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to FastAPI",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            }
        }
        
    ]
}
